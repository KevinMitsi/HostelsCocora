<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hostelscocora.Controllers.InicioSesionViewController">
   <children>
      <ImageView fx:id="imgCocora" fitHeight="320.0" fitWidth="200.0" layoutX="33.0" layoutY="41.0" pickOnBounds="true" preserveRatio="true" />
      <Label layoutX="263.0" layoutY="41.0" text="BIENVENIDO A LA APLICACIÓN DE HOSTELS COCORA">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <Label layoutX="263.0" layoutY="94.0" text="Nombre de usuario:" />
      <TextField fx:id="tfName" layoutX="262.0" layoutY="122.0" prefHeight="25.0" prefWidth="251.0" promptText="nombre" />
